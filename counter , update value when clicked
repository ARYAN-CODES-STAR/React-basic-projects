// counter , update value when clicked

import React from "react";
import {useState} from "react";


export default function App() {
  const[value, setValue] = useState(0);
  return (
    <>
      <h1>Counter banana hai </h1>
      <h2>{value}</h2>
      <button onClick={
        () =>{
          setValue(value+1);
        }
      }>Click me </button>

    </>  
  )
}
